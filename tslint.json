{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "jsRules": {},
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "no-console": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-template"
    ],
    "variable-name": [
      true,
      "check-format",
      "ban-keywords",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "interface-name": false,
    "ban-types": [
      true,
      [
        "Object",
        "Use {} instead."
      ],
      [
        "String",
        "Use string instead"
      ],
      [
        "Number",
        "Use number instead"
      ],
      [
        "Array",
        "Use type[] instead"
      ]
    ],
    "forin": false,
    "no-namespace": false,
    "radix": false,
    "max-classes-per-file": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "only-arrow-functions": false,
    "unified-signatures": false,
    "no-unused-expression": [
      true,
      "allow-new"
    ],
    // tslint-react
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-curly-spacing": [
      true,
      {
        "when": "never",
        "allowMultiline": false
      }
    ],
    "jsx-boolean-value": false
  },
  "rulesDirectory": []
}